<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.heroku.a1977.paulo10.multimidiaapp.LandActivity">

    <com.heroku.paulo10977.surface.VideoSurfaceView
        android:layout_gravity="center_horizontal|top"
        android:id="@+id/backgroundSurfaceView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/background_landscape"
        android:orientation="vertical"
        android:layout_height="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_multimidia_app"
            android:textSize="@dimen/font_welcome"
            android:textColor="@android:color/white"
            android:id="@+id/textView"
            android:layout_marginBottom="@dimen/margin_welcome_text"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="@string/continue_btn"
            android:id="@+id/button"
            android:padding="15dp"
            android:textColor="@android:color/white" />

    </LinearLayout>


</FrameLayout>
